{% extends 'base.html.twig' %}

{% block title %}Modify My Account{% endblock %}

{% block body %}
    {{ include("navigation_bar/manageNav.html.twig") }}

    <div class="modify-my-account-grid">
        <h1>Edit Info</h1>
        <br>
        {{ form_start(form) }}
        <p>Email</p>
            {{ form_widget(form.email) }}
        <br><br>
        <p>First name</p>
            {{ form_widget(form.first_name) }}
        <br><br>
        <p>Last name</p>
            {{ form_widget(form.last_name) }}
        <br><br>
        <p>Password</p>
            {{ form_widget(form.plainPassword, { 'label': 'New Password' }) }}
            <br><br>
            <button class="btn">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}